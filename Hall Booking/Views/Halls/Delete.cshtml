@model Hall_Booking.Models.Hall
@{ Layout ="~/Views/Shared/AdminLayout.cshtml";}
@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Hall</title>
</head>
<body>

<h1 style=" font-family: -webkit-body; font-weight: bold;  font-size: 23px;"> <i class="mdi mdi-delete-circle" style="font-size: 26px;"></i>  Delete Hall</h1>

<h3 style=" font-family: -webkit-body;  font-size: 20px;">Are you sure you want to delete this Hall?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.HallName)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.HallName)
        </dd>
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.HallAddress)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.HallAddress)
        </dd>
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.HallArea)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.HallArea)
        </dd>
         <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.HallCategory)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.HallCategory.Id)
        </dd>
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="color: black;background-color: red;text-decoration: none;padding: 13px;border-radius: 18px; width: 94px; height: 43px;" /> 

    </form>
</div>
</body>
</html>