@model IEnumerable<Hall_Booking.Models.User>
@{ Layout ="~/Views/Shared/AdminLayout.cshtml";}
@{
    ViewData["Title"] = "UserIndex";
}
<head>
    <style>
        .linkh2 a:hover{
            font-weight:bold;
        }
        .table th img, .table td img {
     height: 70px; 
     width: 70px; 
    border-radius: 100%;
}
        table thead tr th{
            font-weight:bold !important;
        }
         th,td{
             padding: 24px;
         }
        
        .table thead th {
            border-top: 0;
            border-bottom-width: 1px;
            font-family: -webkit-body !important;
            font-weight: initial;
            font-size: 17px;
        }
         .table tbody td {
            border-top: 0;
            border-bottom-width: 1px;
            font-family: -webkit-body !important;
            font-weight: initial;
            font-size: 17px;
        }
    </style>

    
</head>
<h1 style="padding: 18px 3px; font-family: -webkit-body;"> <i class="mdi mdi-account-alert menu-icon"></i> Users Details</h1>
<br />

 

<div class="table-responsive" style="padding: 10px 33px;">
<table class="table">
    <thead class="theadclass">
        <tr class="thstyle">
            <th>
               First Name
            </th>
            <th>
               Last Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
              Phone Number
            </th>
            <th>
                User Name
            </th>
            <th>
                Profile Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="tdstyle">
            <td>
                @Html.DisplayFor(modelItem => item.Fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phonenumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
             <td>
                <img src=@Url.Content("~/Images/" + item.ImagePath)  style="border-radius:20%;" width="100" height="100" />
            </td>
            
        </tr>
}
    </tbody>
</table>
</div>