@model Hall_Booking.Models.ContactU

@{
    Layout ="~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Delete";
}
<head>
    <title>Message Delete</title>
    <style>
        .paddingvalue{
            padding: 10px;
        }
    </style>
</head>
<h1  style=" font-family: -webkit-body; font-weight: bold;  font-size: 23px;"> <i class="mdi mdi-delete-circle" style="font-size: 26px;"></i>Message Delete</h1>

<h3 style=" font-family: -webkit-body;  font-size: 20px;">Are you sure you want to delete this Message?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 paddingvalue" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10 paddingvalue" style=" font-family: -webkit-body;  font-size: 17px;" >
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2 paddingvalue" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10 paddingvalue" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2 paddingvalue" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class = "col-sm-10 paddingvalue" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class = "col-sm-2 paddingvalue" hidden>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10 paddingvalue" hidden>
            @Html.DisplayFor(model => model.User.Id)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger"  style="color: black;background-color: red;text-decoration: none;padding: 13px;border-radius: 18px; width: 94px; height: 43px;" /> |
        <a asp-action="AdminMessages"  style="color: black;background-color: antiquewhite;text-decoration: none;padding: 13px;border-radius: 18px;">Back to List</a>
    </form>
</div>
