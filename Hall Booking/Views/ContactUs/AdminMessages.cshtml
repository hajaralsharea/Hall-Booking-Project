@model IEnumerable<Hall_Booking.Models.ContactU>

@{
    ViewData["Title"] = "AdminMessages";
    Layout ="~/Views/Shared/AdminLayout.cshtml";
  
}
<head>
    <title>
        Admin Messages
    </title>
    <style>
         .linkh2 a:hover{
            font-weight:bold;
        }
       
     
       table thead tr th{
            font-weight:bold !important;
        }
        
       
            .table thead th {
            border-top: 0;
            border-bottom-width: 1px;
            font-family: -webkit-body !important;
            font-weight: initial;
            font-size: 17px;
            padding: 24px;

        }
         .table tbody td {
            border-top: 0;
            border-bottom-width: 1px;
            font-family: -webkit-body !important;
            font-weight: initial;
            font-size: 17px;
            padding: 24px;
        }


    </style>
</head> 
<body >
<h1 style=" font-family: -webkit-body; font-weight: bold;  font-size: 23px; padding: 18px 3px;"><i class="mdi mdi-message-text menu-icon"></i>  My Messages</h1>

<div class="table-responsive" >
<table class="table">
    <thead >
        <tr class="thstyle">
            <th>
               Sender Name
            </th>
            <th>
                Sender Email 
            </th>
            <th>
                Message
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
           
            <tr class="tdstyle">
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td hidden >
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td class="linkh2">
               
                <a asp-action="Delete" asp-route-id="@item.Id"  style="color: black;background-color: antiquewhite;text-decoration: none;padding: 13px;border-radius: 18px;">Delete</a>
            </td>
                </tr>
            }
           
          


    </tbody>
</table>
</div></body>