	<style>
		.emailhover a:hover{
			font-weight:bold;
		}
	</style>
  </head>
  <body>
      <section class="ftco-section bg-light">
    	<div class="container">
    		<div class="row no-gutters">
    			
					<div class="col-md-12">
						<div class="wrapper">
							<div class="row no-gutters">
								<div class="col-lg-8 col-md-7 d-flex align-items-stretch">
									<div class="contact-wrap w-100 p-md-5 p-4">
										<h3 class="mb-4">Get in touch</h3>
										<div id="form-message-warning" class="mb-4"></div> 
					      		
										<form method="POST" id="contactForm" name="contactForm" class="contactForm" asp-action="Create">
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label asp-for="FullName" class="control-label label"></label>
														<input asp-for="FullName" class="form-control" placeholder="Name"/>
														<span asp-validation-for="FullName" class="text-danger"></span>
													</div>
													
												</div>
												<div class="col-md-6"> 
													<div class="form-group">
														<label asp-for="Email" class="control-label label"></label>
														<input asp-for="Email" class="form-control"  placeholder="Email"/>
														<span asp-validation-for="Email" class="text-danger"></span>
													</div>
													
												</div>
												
												<div class="col-md-12">
													<div class="form-group">
														<label asp-for="Message" class="control-label label"></label>
														<input asp-for="Message" class="form-control" placeholder="Message" id="idinput"/>
														<span asp-validation-for="Message" class="text-danger"></span>
													</div>
													
												</div>
												<div class="form-group" hidden>
													<label asp-for="UserId" class="control-label"></label>
													<select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
												</div>
												
												<div class="col-md-12">
													<div class="form-group">
														<input type="submit" value="Send" class="btn btn-primary" style="background: #f5edd5;border: 1px solid black;color: black; font-weight:bold;"/>
													<div class="submitting"></div>
												</div>
													
												</div>
											</div>
										</form>
									</div>
								</div>
								<div class="col-lg-4 col-md-5 d-flex align-items-stretch">
									<div class="info-wrap w-100 p-md-5 p-4" style="background-color:antiquewhite;">
										<h3 style="color:black">Let's get in touch</h3>
										<p class="mb-4" style="color:black" >We're open for any suggestion or just to have a chat</p>
					        	<div class="dbox w-100 d-flex align-items-start">
					        		<div class="icon d-flex align-items-center justify-content-center">
					        			<span class="fa fa-map-marker" style="color:black"></span>
					        		</div>
					        		<div class="text pl-3">
						            <p style="color:black"><span style="color:black">Address:</span> Jordan-Amman khalda Khalda Street</p>
						          </div>
					          </div>
					        	<div class="dbox w-100 d-flex align-items-center">
					        		<div class="icon d-flex align-items-center justify-content-center">
					        			<span class="fa fa-phone" style="color:black"></span>
					        		</div>
					        		<div class="text pl-3">
						            <p><span style="color:black">Phone:</span> <a href="tel://0786543216" style="color:black">+962786543216</a></p>
						          </div>
					          </div>
					        	<div class="dbox w-100 d-flex align-items-center">
					        		<div class="icon d-flex align-items-center justify-content-center">
					        			<span class="fa fa-paper-plane" style="color:black"></span>
					        		</div>
					        		<div class="text pl-3">
						            <p class="emailhover"><span style="color:black">Email:</span> <a href="mailto:hajarmalsharea@gmail.com" style="color:black" class="emailhover">TheHalls@gmail.com</a></p>
						          </div>
					          </div>
					        	<div class="dbox w-100 d-flex align-items-center">
					        		<div class="icon d-flex align-items-center justify-content-center">
					        			<span class="fa fa-globe" style="color:black;"></span>
					        		</div>
					        		<div class="text pl-3">
						            <p><span style="color:black">Website</span> <a asp-controller="Home" asp-action="Index" style="color:black">The Halls.com</a></p>
						          </div>
					          </div>
				          </div>
								</div>
							</div>
						</div>
					</div>
				</div>
    	</div>
    </section>
	<section>
