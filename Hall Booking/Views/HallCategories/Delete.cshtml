@model Hall_Booking.Models.HallCategory
@{ Layout ="~/Views/Shared/AdminLayout.cshtml";}
@{
  
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Category</title>
</head>
<body>
<h1 style=" font-family: -webkit-body; font-weight: bold;  font-size: 23px;"> <i class="mdi mdi-delete-circle" style="font-size: 26px;"></i>Delete Category</h1>

<h3 style=" font-family: -webkit-body;  font-size: 20px;">Are you sure you want to delete this Category?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.HallDescription)
        </dt>
        <dd class = "col-sm-10" hidden>
            @Html.DisplayFor(model => model.HallDescription)
        </dd>
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="color: black;background-color: red;text-decoration: none;padding: 13px;border-radius: 18px; width: 94px; height: 43px;"  /> 

    </form>
</div>
</body>
</html>
