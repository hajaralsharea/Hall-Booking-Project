@model IEnumerable<Hall_Booking.Models.HallCategory>
@{ Layout ="~/Views/Shared/AdminLayout.cshtml";}

   @* @{ Layout ="~/Views/Shared/UserLayout.cshtml";}*@


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hall Category</title>
     <style>
      .linkho a:hover{
          font-weight:bold;
      }
  
         th,td{
             padding: 24px;
         }
          table thead tr th{
            font-weight:bold !important;
        }

         .table th img, .table td img {
            width: 80px;
            height: 80px;
   
        }
        
        .table thead th {
            border-top: 0;
            border-bottom-width: 1px;
            font-family: -webkit-body !important;
            font-weight: initial;
            font-size: 17px;
        }
         .table tbody td {
            border-top: 0;
            border-bottom-width: 1px;
            font-family: -webkit-body !important;
            font-weight: initial;
            font-size: 17px;
        }
      
    </style>
</head>
<body>
<h1  style="padding: 18px 3px; font-family: -webkit-body;"> <i class="mdi mdi-home-outline menu-icon"></i>Hall Categories</h1>
<div style="padding-top: 17px;">
<p style="text-decoration: none;
    color: black;
    background: antiquewhite;
    width: 161px;
    height: 45px;
    display: flex;
    justify-content: center;
    border-radius: 50px;" class="linkho">
    <a asp-action="Create"  style="text-decoration: none;color: black;padding-top: 11px; ">Add Category</a>
    <i class="mdi mdi-library-plus"style="padding-top: 10px; padding-left: 4px;"></i>
</p>
</div>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr class="thstyle">
            <th>
                Category Name
            </th>
            <th>
                Category Image
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.HallDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="tdstyle">
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
               <img src=@Url.Content("~/Images/" + item.ImagePath)  style="border-radius:30%;" width="100" height="100" />
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.HallDescription)
            </td>
            <td class="linkho">
                <a asp-action="Edit" asp-route-id="@item.Id"style="color: black;background-color: antiquewhite;text-decoration: none;padding: 13px;border-radius: 18px;">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" style="color: black;background-color: antiquewhite;text-decoration: none;padding: 13px;border-radius: 18px;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table></div>
</body>
</html>
