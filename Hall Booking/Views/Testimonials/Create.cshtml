@model Hall_Booking.Models.Testimonial
 
@{
    ViewData["Title"] = "Create";
    Layout ="~/Views/Shared/UserLayout.cshtml";
}

<h1 style=" font-family: -webkit-body; font-weight: bold;  font-size: 23px;"><i class="mdi mdi-note-plus menu-icon"></i>  Your FeedBack</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <div class="form-group">
                <label asp-for="Commint" class="control-label" style=" font-family: -webkit-body;  font-size: 20px;">FeedBack</label>
                <input asp-for="Commint" class="form-control" />
                <span asp-validation-for="Commint" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
             <div class="form-group" hidden>
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class ="form-control" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="color: black;background-color: antiquewhite;text-decoration: none;padding: 13px;border-radius: 18px; border-color:antiquewhite;" />
            </div>
        </form>
    </div>
</div>




