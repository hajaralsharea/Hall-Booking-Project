@model Hall_Booking.Models.Testimonial
@{ Layout ="~/Views/Shared/AdminLayout.cshtml";}
@{
    ViewData["Title"] = "Delete";
}

<h1 style=" font-family: -webkit-body; font-weight: bold;  font-size: 23px;"> <i class="mdi mdi-delete-circle" style="font-size: 26px;"></i>  Delete Testimonial</h1>

<h3  style=" font-family: -webkit-body;  font-size: 20px;">Are you sure you want to delete this FeedBack?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
           Comment
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.Commint)
        </dd>
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.User.Id)
        </dd class>
        <dt class = "col-sm-2" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10" style=" font-family: -webkit-body;  font-size: 17px;">
            @Html.DisplayFor(model => model.Status.Id)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="color: black;background-color: red;text-decoration: none;padding: 13px;border-radius: 18px; width: 94px; height: 43px;"/> 
      
    </form>
</div>
