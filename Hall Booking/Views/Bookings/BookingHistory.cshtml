@model IEnumerable<Hall_Booking.Models.Booking>

@{
    ViewData["Title"] = "BookingHistory";
    Layout ="~/Views/Shared/UserLayout.cshtml";
    var userId = ViewBag.UserId;
}


<head>
    <style>
               th,td{
             padding: 24px;
         }
          .linkh2 a:hover{
            font-weight:bold;
        }
         table thead tr th{
            font-weight:bold !important;
        }

             .linkh2 a:hover{
            font-weight:bold;
        }
        .table thead th {
            border-top: 0;
            border-bottom-width: 1px;
            font-family: -webkit-body !important;
            font-weight: initial;
            font-size: 17px;
        }
         .table tbody td {
            border-top: 0;
            border-bottom-width: 1px;
            font-family: -webkit-body !important;
            font-weight: initial;
            font-size: 17px;
        }
    </style>
</head>
<h1 style="padding: 18px 3px; font-family: -webkit-body;"><i class="mdi mdi-collage menu-icon"></i>  My Booking History</h1>



<div style="padding-top: 17px;">
<p style="text-decoration: none;
    color: black;
    background: antiquewhite;
    width: 141px;
    height: 45px;
    display: flex;
    justify-content: center;
    border-radius: 50px;" class="linkho">
    <a asp-action="UserHallsCard" asp-controller="Halls"  style="text-decoration: none;color: black;padding-top: 11px; ">Booking Hall </a>
    <i class="mdi mdi-library-plus"style="padding-top: 10px; padding-left: 4px;"></i>
</p>
</div>




<table class="table">
    <thead>
        <tr>
            <th>
                Needs
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th>
               Check In
            </th>
            <th>
               Check Out
            </th>
            <th>
                Hall Name
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
       
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            if (userId == item.UserId)
            {
                
            
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingNotes)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hall.HallName)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>
          
        </tr>
}}
    </tbody>
</table>
