    <thead>
        <tr>
            <th>
               Notes
            </th>
            <th>
               Submited Date
            </th>
            <th>
              Chick In
            </th>
            <th>
               Check Out
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            
        </tr>
